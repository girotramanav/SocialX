<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="18dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago BBC News"/>

            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/app_blue"
                android:textStyle="bold"
                android:text="Apple admits slowing down older iphones"/>

            <TextView
                android:id="@+id/news_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/app_blue"
                android:text="Customer have long suspected iphones slow down over time. Now, Apple has confirmed"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/news_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.2"
            android:padding="4dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>